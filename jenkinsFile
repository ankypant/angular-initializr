pipeline {
    agent any
     tools {
       nodejs "node"
      }
      
    stages {
    stage('Install') {
      steps { 
        sh 'npm install'
        sh 'npm install -g @angular/cli@11'
        sh 'ng --version'
      }
    }
    
    stage('Test') {
      steps {
        sh 'npm run test'
      }
    }

    stage('Build') {
      steps {
        sh 'npm run build'
      }
    }

    stage('Deploy') {
      steps {
        milestone(20)
        echo "Deploying..."
      }
    }
  }
}
